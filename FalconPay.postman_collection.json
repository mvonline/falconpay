{
    "info": {
        "_postman_id": "falconpay-api-v1",
        "name": "FalconPay API",
        "description": "Comprehensive API collection for FalconPay Monorepo",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@falconpay.om\",\n    \"password\": \"Password123!\",\n    \"firstName\": \"Masoud\",\n    \"lastName\": \"Vafaei\",\n    \"phoneNumber\": \"+96890001234\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "register"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const response = pm.response.json();",
                                    "if (response.accessToken) {",
                                    "    pm.environment.set(\"accessToken\", response.accessToken);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@falconpay.om\",\n    \"password\": \"Password123!\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Payments",
            "item": [
                {
                    "name": "Create Transfer",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{accessToken}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"receiverId\": \"some-receiver-uuid\",\n    \"amount\": 50.500,\n    \"description\": \"Payment for services\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/payments/transfer",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "payments",
                                "transfer"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Wallet",
            "item": [
                {
                    "name": "Get Balance",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{accessToken}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/wallets/balance",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "wallets",
                                "balance"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Admin",
            "item": [
                {
                    "name": "Reporting Stats",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/reporting/stats?status=COMPLETED",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "reporting",
                                "stats"
                            ],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "COMPLETED"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Export CSV",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/reporting/export/csv",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "reporting",
                                "export",
                                "csv"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ]
}